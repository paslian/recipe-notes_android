<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gelombang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gelombang" />

        <ImageView
            android:id="@+id/wrapDate"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/kotakdalam" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="207dp"
            android:layout_height="101dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/logo_saracope"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/logo"
            android:fontFamily="@font/poppinssemi"
            android:gravity="left"
            android:text="00:00:00"
            android:textColor="#ffffff"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/clock"
            android:fontFamily="@font/poppinssemi"
            android:gravity="left"
            android:text="date"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapDate"
            android:fontFamily="@font/poppinssemi"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Hello Welcome back!!"
            android:textColor="#000"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-33dp"
            tools:layout_editor_absoluteY="127dp" />

        <ImageView
            android:id="@+id/wrapMenu"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/textWelcome"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn" />

        <TextView
            android:id="@+id/textWelcomeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWelcome"
            android:fontFamily="@font/poppinssemi"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Choose Menu"
            android:textColor="#FFFF"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-33dp"
            tools:layout_editor_absoluteY="127dp" />

        <Button
            android:id="@+id/btnMakanan"
            android:layout_below="@+id/textWelcomeMenu"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppinssemi"
            android:textColor="@color/white"

            android:text="Makanan"

            />

        <Button
            android:id="@+id/btnMinuman"
            android:layout_below="@+id/textWelcomeMenu"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppinssemi"
            android:textColor="@color/white"
            android:text="MINUMAN" />

        <ImageView
            android:id="@+id/makanan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textWelcomeMenu"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/makanan" />

        <ImageView
            android:id="@+id/minuman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textWelcomeMenu"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/minuman" />


    </RelativeLayout>

</FrameLayout>